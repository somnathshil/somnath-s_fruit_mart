<% layout("/layouts/boilerplate") %>
<body>
    <h2 class="new-heading">Create a new Fruit</h2>
    <div class="row">
        <div class="col-8 offset-2">
    <form action="/fruits/new" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-2">
        <label for="title">Title</label>
        <input type="text" name="fruit[title]" placeholder="enter title" class="form-control " required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid title !</div>
    </div>
        <br/><br/>
        <div class="mb-2">
        <label for="description">Description</label>
        <textarea name="fruit[description]" placeholder="enter description" class="form-control" required></textarea>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid description !</div>
        </div>
        <br/><br/>
        <div class="mb-2">
        <label for="image">Upload Image</label>
        <input type="file" name="fruit[image]"  class="form-control" >
        required
        <div class="valid-feedback">Title Looks Good !</div>
        </div>
        <br/><br/>
        <div class="row">
            <div class="col-md-6">
        <label for="price">Price</label>
        <input type="text" name="fruit[price]" placeholder="enter the price" class="form-control " required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid price !</div>
    </div>
        <br/><br/>
        <div class="col-md-6">
        <label for="country"> City</label>
        <input type="text" name="fruit[country]" placeholder="enter country name" id="locationInput" class="form-control col-4" required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid country name !</div>
    </div>
    </div>
        <br/><br/>
        <div class="new-btn">
        <button class="btn btn-outline-dark">Submit</button>
    </div>
        <br/><br/>
    </form>
</div>
</div>
</body>
