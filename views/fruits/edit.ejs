<% layout("/layouts/boilerplate") %>
<body>
    <h2 class="edit-heading">Edit your post</h2>
    <div class="row">
        <div class="col-8 offset-2">
    <form action="/fruits/<%= fruit._id %>?_method=PUT" method="post" class="needs-validation" novalidate 
        enctype="multipart/form-data">
        <div class="mb-2">
        <label for="title">Title</label>
        <input type="text" name="fruit[title]" value="<%= fruit.title %>" class="form-control" required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid title !</div>
    </div>
        <br/><br/>
        <div class="mb-2">
        <label for="description">Description</label>
        <textarea name="fruit[description]"  class="form-control" required><%= fruit.description %></textarea>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid description !</div>
        </div>
        <br/><br/>
        <div class="mb-3">
            <img src="<%= originalImageUrl %>" width="200px" alt="image">
        </div>
        <div class="mb-2">
        <label for="image">Upload New Image</label>
        <input type="file" name="fruit[image]" value="<%= fruit.image %>" class="form-control" >
    
        </div>
        <br/><br/>
        <div class="row">
        <div class="col-md-6">
        <label for="price">Price</label>
        <input type="text" name="fruit[price]" value="<%= fruit.price %>" class="form-control" required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid price !</div>
        </div>
        <br/><br/>
        <div class="col-md-6">
        <label for="country"> City</label>
        <input type="text" name="fruit[country]" value="<%= fruit.country %>" class="form-control" required>
        <div class="valid-feedback">Title Looks Good !</div>
        <div class="invalid-feedback">Please enter a valid country name !</div>
        </div>
    </div>
        <br/><br/>
        <div class="edit-btn">
        <button class="btn btn-outline-dark">Submit</button>
    </div>
        <br/><br/>
    </form>
</div>
</div>
</body>
